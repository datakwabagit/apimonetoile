# ===========================================
# MON ÉTOILE - BACKEND CONFIGURATION
# ===========================================

# APPLICATION
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# CORS - Origins autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# DATABASE - MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/mon-etoile?retryWrites=true&w=majority

# JWT AUTHENTICATION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# BCRYPT - Salt rounds for password hashing
BCRYPT_ROUNDS=10

# RATE LIMITING
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ADMIN ACCOUNT (First user created)
ADMIN_EMAIL=admin@monetoile.com
ADMIN_PASSWORD=Admin@123456

# STRIPE PAYMENT (Optional - à configurer plus tard)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# EMAIL (Optional - à configurer plus tard)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@monetoile.com
